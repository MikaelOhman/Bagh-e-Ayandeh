<style>
  .quick-actions {
    margin: 3rem 0;
    text-align: center;
  }

  .quick-actions h2 {
    font-size: 2.5rem;
    color: #ffffff;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #a0a0a0;
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  .action-card {
    position: relative;
    background: rgba(26, 31, 58, 0.8);
    backdrop-filter: blur(20px);
    border: 2px solid rgba(102, 126, 234, 0.3);
    border-radius: 16px;
    padding: 2rem 1.5rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
  }

  .action-card:hover {
    transform: translateY(-8px) scale(1.03);
    border-color: #667eea;
    box-shadow: 0 20px 50px rgba(102, 126, 234, 0.5);
  }

  .action-card.primary {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
    border-color: #667eea;
  }

  .action-card.primary:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.5), rgba(118, 75, 162, 0.5));
    box-shadow: 0 20px 60px rgba(102, 126, 234, 0.7);
  }

  .action-icon {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    transition: transform 0.3s;
  }

  .action-card:hover .action-icon {
    transform: scale(1.2) rotate(5deg);
  }

  .action-card h3 {
    font-size: 1.4rem;
    color: #ffffff;
    margin: 0;
  }

  .action-card p {
    font-size: 0.95rem;
    color: #a0a0a0;
    margin: 0;
  }

  .action-arrow {
    font-size: 1.5rem;
    color: #667eea;
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s;
  }

  .action-card:hover .action-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .quick-stats {
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
    padding: 2rem;
    background: rgba(26, 31, 58, 0.4);
    border-radius: 16px;
    max-width: 800px;
    margin: 0 auto;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: #42e695;
    text-shadow: 0 0 20px rgba(66, 230, 149, 0.5);
  }

  .stat-label {
    font-size: 0.9rem;
    color: #a0a0a0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .actions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .quick-stats {
      gap: 2rem;
    }
  }
</style>

