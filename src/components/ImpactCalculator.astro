<style>
  .impact-calculator {
    background: rgba(26, 31, 58, 0.8);
    backdrop-filter: blur(20px);
    border: 2px solid rgba(102, 126, 234, 0.5);
    border-radius: 20px;
    padding: 3rem;
    margin: 3rem 0;
    box-shadow: 0 10px 40px rgba(0,0,0,0.3);
  }

  .impact-calculator h3 {
    font-size: 2rem;
    color: #ffffff;
    margin-bottom: 2rem;
    text-align: center;
  }

  .slider-container {
    margin-bottom: 3rem;
  }

  .slider-container label {
    display: block;
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: #e0e0e0;
  }

  input[type="range"] {
    width: 100%;
    height: 8px;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    border-radius: 10px;
    outline: none;
    -webkit-appearance: none;
  }

  input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 24px;
    height: 24px;
    background: white;
    border: 3px solid #667eea;
    border-radius: 50%;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.5);
    transition: all 0.3s;
  }

  input[type="range"]::-webkit-slider-thumb:hover {
    transform: scale(1.2);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.8);
  }

  .amount-display {
    text-align: center;
    font-size: 3rem;
    font-weight: 900;
    color: #667eea;
    margin-top: 1rem;
    text-shadow: 0 0 20px rgba(102, 126, 234, 0.5);
  }

  .impact-results {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .impact-item {
    background: rgba(102, 126, 234, 0.1);
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s;
  }

  .impact-item:hover {
    transform: translateY(-5px);
    border-color: #667eea;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
  }

  .impact-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .impact-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 900;
    color: #42e695;
    transition: all 0.3s;
  }

  .impact-label {
    display: block;
    font-size: 0.9rem;
    color: #a0a0a0;
    margin-top: 0.5rem;
  }

  .contribute-btn {
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 1.5rem 3rem;
    border-radius: 50px;
    font-size: 1.3rem;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.4s;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }

  .contribute-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
  }
</style>

<script>
  const slider = document.getElementById('amount') as HTMLInputElement;
  const amountValue = document.getElementById('amount-value');
  const treesEl = document.getElementById('trees');
  const waterEl = document.getElementById('water');
  const peopleEl = document.getElementById('people');
  const energyEl = document.getElementById('energy');

  const updateImpact = () => {
    const amount = parseInt(slider.value);
    amountValue.textContent = amount.toString();
    
    // Impact calculations (adjust ratios as needed)
    const trees = Math.floor(amount / 50);
    const water = Math.floor(amount / 10);
    const people = Math.floor(amount / 100);
    const energy = Math.floor(amount / 20);
    
    // Animate the numbers
    animateNumber(treesEl, parseInt(treesEl.textContent || '0'), trees);
    animateNumber(waterEl, parseInt(waterEl.textContent || '0'), water);
    animateNumber(peopleEl, parseInt(peopleEl.textContent || '0'), people);
    animateNumber(energyEl, parseInt(energyEl.textContent || '0'), energy);
  };

  const animateNumber = (element: HTMLElement | null, from: number, to: number) => {
    if (!element) return;
    
    const duration = 500;
    const steps = 20;
    const stepValue = (to - from) / steps;
    let current = from;
    let step = 0;
    
    const timer = setInterval(() => {
      step++;
      current += stepValue;
      element.textContent = Math.round(current).toString();
      
      if (step >= steps) {
        element.textContent = to.toString();
        clearInterval(timer);
      }
    }, duration / steps);
  };

  slider.addEventListener('input', updateImpact);
</script>
