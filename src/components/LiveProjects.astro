  .section-header h2 {
    font-size: 2.5rem;
    color: #ffffff;
    margin: 0;
  }

  .live-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 0, 0, 0.1);
