<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real Iran Map - Leaflet Local</title>
  
  <!-- Local Leaflet CSS -->
  <link rel="stylesheet" href="/Bagh-e-Ayandeh/leaflet/leaflet.css" />
  
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }
    
    #map {
      width: 100vw;
      height: 100vh;
    }
    
    .leaflet-popup-content {
      text-align: center;
      font-family: system-ui, sans-serif;
    }
    
    .leaflet-popup-content strong {
      font-size: 16px;
      display: block;
      margin-bottom: 8px;
    }
    
    .explore-btn {
      margin-top: 10px;
      padding: 8px 16px;
      background: linear-gradient(to right, #059669, #0ea5e9);
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div id="map"></div>

  <!-- Local Leaflet JS -->
  <script src="/Bagh-e-Ayandeh/leaflet/leaflet.js"></script>
  
  <script>
    console.log('Loading Leaflet from local files...');
    console.log('Leaflet version:', L.version);
    
    // Initialize map centered on Iran
    const map = L.map('map').setView([32.4279, 53.6880], 6);

    // Add OpenStreetMap tiles
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap contributors',
      maxZoom: 18
    }).addTo(map);

    const basePath = '/Bagh-e-Ayandeh';

    // Cities data
    const cities = [
      { name: 'Shiraz شیراز', coords: [29.5918, 52.5836], available: true, url: basePath + '/shiraz' },
      { name: 'Tehran تهران', coords: [35.6892, 51.3890], available: false },
      { name: 'Isfahan اصفهان', coords: [32.6546, 51.6680], available: false },
      { name: 'Tabriz تبریز', coords: [38.0962, 46.2738], available: false },
      { name: 'Mashhad مشهد', coords: [36.2605, 59.6168], available: false }
    ];

    cities.forEach(city => {
      const marker = L.circleMarker(city.coords, {
        radius: city.available ? 12 : 8,
        fillColor: city.available ? '#0ea5e9' : '#94a3b8',
        color: '#fff',
        weight: 3,
        opacity: 1,
        fillOpacity: 0.8
      }).addTo(map);

      const popupContent = city.available ? 
        `<strong>${city.name}</strong><br><button class="explore-btn" onclick="window.location.href='${city.url}'">Explore →</button>` :
        `<strong>${city.name}</strong><br><em>Coming soon...</em>`;

      marker.bindPopup(popupContent);
      
      if (city.available) {
        marker.on('click', function() {
          setTimeout(() => {
            if (confirm('Go to ' + city.name + '?')) {
              window.location.href = city.url;
            }
          }, 100);
        });
      }
    });
    
    console.log('✓ Map loaded successfully with local Leaflet!');
  </script>
</body>
</html>
